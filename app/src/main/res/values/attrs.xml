<resources>

    <!--
         Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels.
    -->
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>
   <declare-styleable name="AsyncImageView">
        <attr name="isCircle" format="boolean" />
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>
    <!--自定控件wifiTopbar -->
    <declare-styleable name="WifiTopbar">
        <attr name="leftBackground" format="reference|color"/>
        <attr name="leftTextName" format="string"/>
        <attr name="leftTextColor" format="reference|color"/>
        <attr name="leftTextSize" format="dimension"/>
        <attr name="tileName" format="string"/>
        <attr name="tileSize" format="dimension"/>
        <attr name="tileColor" format="reference|color"/>
        <attr name="rightTextName" format="string"/>
        <attr name="rightTextColor" format="reference|color"/>
        <attr name="rightTextSize" format="dimension"/>
        <attr name="rightBackground" format="reference|color"/>
    </declare-styleable>

    <!-- niceSpinner-->
    <declare-styleable name="NiceSpinner">
        <attr name="arrowTint" format="color" />
        <attr name="hideArrow" format="boolean" />
        <attr name="backgroundSelector" format="integer"/>
        <attr name="textTint" format="color"/>
    </declare-styleable>

    <!-- SelectSpinner-->
    <declare-styleable name="SelectSpinner">
        <attr name="arrowtint" format="color" />
        <attr name="hidearrow" format="boolean" />
        <attr name="backgroundselector" format="integer"/>
        <attr name="texttint" format="color"/>
    </declare-styleable>
</resources>
