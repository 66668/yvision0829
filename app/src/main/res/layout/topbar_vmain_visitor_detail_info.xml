<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_topbar_height46"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@color/common_topbar_bgcolor"
                android:gravity="center_vertical">

    <!-- 退出 -->
    <RelativeLayout
        android:id="@+id/tv_settings"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/view2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14sp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:src="@mipmap/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/img_back"
            android:singleLine="true"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="@dimen/common_textSize_default16"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="访客详细信息"
        android:textColor="#FFF"
        android:textSize="@dimen/common_textSize_default18"/>
    <!-- 保存 -->

    <TextView
        android:id="@+id/toSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:text="保存"
        android:textColor="#FFF"
        android:textSize="16sp"/>

</RelativeLayout>