<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fafafa">

    <com.yvision.widget.CircleImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/common_topbar_height"
        android:layout_height="@dimen/common_topbar_height"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/photo" />
    <TextView
        android:id="@+id/tv_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="方式"
        android:singleLine="true"
        android:textColor="#282828"
        android:textSize="@dimen/common_textSize_default18"
        android:layout_above="@+id/tv_time"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_toEndOf="@+id/imageView1" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
        android:singleLine="true"
        android:textColor="#282828"
        android:textSize="@dimen/common_textSize_default22"
        android:layout_above="@+id/view"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_toEndOf="@+id/imageView1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignBottom="@+id/imageView1"
        android:background="@color/bar_line"
        android:id="@+id/view" />

</RelativeLayout>
