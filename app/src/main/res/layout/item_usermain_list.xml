<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fafafa">

    <com.yvision.widget.CircleImageView
        android:id="@+id/img_face"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:src="@mipmap/photo"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/img_face"
        android:singleLine="true"
        android:text="姓名"
        android:textColor="#282828"
        android:textSize="@dimen/common_textSize_default14"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_face"
        android:layout_toEndOf="@+id/img_face"
        android:layout_toRightOf="@+id/img_face"
        android:singleLine="true"
        android:text="时间"
        android:textColor="#282828"
        android:textSize="@dimen/common_textSize_default12"/>
</RelativeLayout>
