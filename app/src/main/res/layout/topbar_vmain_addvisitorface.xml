<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:background="@color/common_topbar_bgcolor"
    android:layout_height="@dimen/common_topbar_height"
    android:gravity="center_vertical" >

    <!-- 退出 -->

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/back" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="访客登记"
        android:textColor="#FFF"
        android:textSize="@dimen/common_textSize_default18" />
    <!-- 保存 -->

    <TextView
        android:id="@+id/toSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:text="保存"
        android:textColor="#FFF" 
        android:textSize="@dimen/common_textSize_default16"/>
    
</RelativeLayout>