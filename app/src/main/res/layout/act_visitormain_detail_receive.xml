<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:theme="@android:style/Theme.NoTitleBar">

    <!-- 01：actionBar -->

    <include layout="@layout/topbar_common_itt"/>
    <!-- 文本信息 总布局 -->

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:background="#f3f3f3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 拍照 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical|left"
                    android:padding="5dp"
                    android:text="@string/visitorPicture_receive"
                    android:textColor="#282828"
                    android:textSize="14sp"/>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="0.55">

                    <com.yvision.widget.CircleImageView
                        android:id="@+id/imgPhoto"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/photo"/>
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/getPic"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:gravity="center_vertical|right">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="12dp"
                        android:src="@mipmap/forword"/>
                </LinearLayout>
            </LinearLayout>
            <!-- 灰色横线 -->

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="#9d9d9d"/>
            <!-- 姓名 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/common_topbar_height"
                    android:layout_weight="0.28"
                    android:gravity="right|center_vertical"
                    android:padding="5dp"
                    android:text="姓名："
                    android:textColor="#282828"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/VisitorName"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/common_edittext_height"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.46"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="11dp"
                    android:singleLine="true"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05"/>

                <CheckBox
                    android:id="@+id/isVip"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:button="@drawable/checked_style"
                    android:text=" VIP"
                    android:textColor="#282828"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- 性别 -->


            <!--
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_topbar_height"
                android:gravity="center_vertical"
