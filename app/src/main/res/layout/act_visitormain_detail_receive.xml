            <!-- 受访人 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_topbar_height"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.28"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="受访人："
                    android:textColor="#282828"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/RespondentID"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/common_edittext_height"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.66"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="11dp"
                    android:singleLine="true"
                    android:textSize="14sp">
                </TextView>
            </LinearLayout>
            <!-- 来访目的 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_topbar_height"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.28"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="来访目的："
                    android:textColor="#282828"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/Aim"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/common_edittext_height"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.66"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="11dp"
                    android:singleLine="true"
                    android:textSize="14sp">
                </TextView>
            </LinearLayout>
            <!-- 预约到访时间 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_topbar_height"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.28"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="到访时间："
                    android:textColor="#282828"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/ArrivalTimePlan_date"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/common_edittext_height"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.66"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="11dp"
                    android:singleLine="true"
                    android:textSize="14sp"/>


            </LinearLayout>
            <!-- 预约离开时间 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_topbar_height"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.28"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="离开时间："
                    android:textColor="#282828"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/LeaveTimePlan_date"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/common_edittext_height"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.66"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="11dp"
                    android:singleLine="true"
                    android:textSize="14sp">
                </TextView>
            </LinearLayout>
            <!-- 所属单位 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_topbar_height"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.28"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="所属单位："
                    android:textColor="#282828"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/Affilication"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/common_edittext_height"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.66"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="11dp"
                    android:singleLine="true"
                    android:textSize="14sp"/>
            </LinearLayout>
            <!-- 联系方式 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_topbar_height"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.28"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="联系方式："
                    android:textColor="#282828"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/PhoneNumber"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/common_edittext_height"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.66"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center_vertical"
                    android:inputType="phone"
                    android:paddingLeft="11dp"
                    android:singleLine="true"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- 欢迎语 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_topbar_height"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.28"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="欢迎语："
                    android:textColor="#282828"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_welcomeword"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/common_edittext_height"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.66"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="11dp"
                    android:singleLine="true"
                    android:textSize="14sp"/>
            </LinearLayout>
            <!-- 备注 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_topbar_height"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.28"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="备注："
                    android:textColor="#282828"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/Remark"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/common_edittext_height"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.66"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="11dp"
                    android:singleLine="true"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>